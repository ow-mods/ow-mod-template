{
  "$schema": "https://json.schemastore.org/template#",
  "author": "Bwc9876",
  "classifications": [
    "Library"
  ],
  "name": "Outer Wilds Mod",
  "defaultName": "OuterWildsMod",
  "identity": "Bwc9876.OW.ModTemplate.CSharp",
  "groupIdentity": "Bwc9876.OW.ModTemplate",
  "shortName": "OuterWildsMod",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "$safeprojectname$",
  "sources": [
    {
      "source": "./",
      "target": "./",
      "include": [
        "**/*",
        "**/*.csproj.user"
      ],
      "exclude": [
        "nh-stuff/**",
        "parent-stuff/**",
        "no-parent-stuff/**",
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.lock.json",
        "**/.gitignore",
        "LICENSE",
        ".github/**"
      ]
    },
    {
      "source": "./parent-stuff",
      "target": "../",
      "modifiers": [
        {
          "condition": "(noParentStuff)",
          "exclude": [
            "**"
          ]
        }
      ]
    },
    {
      "source": "./no-parent-stuff",
      "target": "./",
      "modifiers": [
        {
          "condition": "(!noParentStuff)",
          "exclude": [
            "**"
          ]
        }
      ]
    },
    {
      "source": "./nh-stuff/",
      "target": "./",
      "modifiers": [
        {
          "condition": "(!usesNH)",
          "exclude": [
            "**"
          ]
        }
      ]
    }
  ],
  "preferNameDirectory": true,
  "symbols": {
    "AuthorName": {
      "type": "parameter",
      "displayName": "Author Name",
      "defaultValue": "Ernesto",
      "datatype": "string",
      "replaces": "$unsafe_username$",
      "description": "Author of this mod (no spaces!)"
    },
    "SafeAuthorName": {
      "type": "derived",
      "valueSource": "AuthorName",
      "valueTransform": "RemoveSpaces",
      "replaces": "$username$"
    },
    "year": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      },
      "replaces": "$year$"
    },
    "usesNH": {
      "type": "parameter",
      "displayName": "Use New Horizons",
      "datatype": "bool",
      "description": "Adds the New Horizons API automatically and calls LoadConfigs in Start",
      "defaultValue": "false"
    },
    "noParentStuff": {
      "type": "parameter",
      "displayName": "Put github files in same folder as project",
      "datatype": "bool",
      "description": "Puts the license, github workflow, and gitignore files in the project folder. Meant for use with the \"Place solution and project in same directory\" option.",
      "defaultValue": "false"
    },
    "owmlVersion": {
      "type": "generated",
      "generator": "constant",
      "parameters": {
        "value": "2.15.1"
      },
      "replaces": "$owmlVersion$"
    },
    "gameLibsVersion": {
      "type": "generated",
      "generator": "constant",
      "parameters": {
        "value": "1.1.15.1018"
      },
      "replaces": "$gameLibsVersion$"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "forms": {
      "RemoveSpaces": {
        "identifier": "replace",
	"pattern": "(\\s)",
	"replacement": ""
      }
  },
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}
